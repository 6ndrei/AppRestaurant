<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppRestaurant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDark2</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowFullscreen">false</item>
        <!-- Customizing toolbar and other components -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges
        </item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/custom_button</item>
    </style>
</resources>
